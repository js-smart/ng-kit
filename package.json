{
  "name": "ng-kit",
  "version": "21.2.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve ng-kit-docs --port=4300",
    "start:docs": "ng serve ng-kit-docs  --port=4300",
    "build": "ng build ng-kit --configuration=production",
    "build:docs": "ng build ng-kit-docs --configuration=production",
    "watch": "ng build --watch --configuration development",
    "test": "ng test --watch=false",
    "test:store": "ng test --include='**/store/*.spec.ts'",
    "bundle:report": "ng build --configuration production --source-map=true && source-map-explorer dist/pres/**/*.js",
    "e2e": "CI=true URL=http://localhost:4300 npx playwright test",
    "lint": "ng lint ng-kit",
    "serve:ssr:ng-kit-docs": "node dist/ng-kit-docs/server/server.mjs"
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/npm",
        {
          "pkgRoot": "dist/ng-kit"
        }
      ],
      "@semantic-release/git",
      "@semantic-release/github"
    ]
  },
  "private": false,
  "dependencies": {
    "@angular/animations": "^21.0.0",
    "@angular/cdk": "21.0.0",
    "@angular/common": "^21.0.0",
    "@angular/compiler": "^21.0.0",
    "@angular/core": "^21.0.0",
    "@angular/forms": "^21.0.0",
    "@angular/material": "21.0.0",
    "@angular/platform-browser": "^21.0.0",
    "@angular/platform-browser-dynamic": "^21.0.0",
    "@angular/platform-server": "^21.0.6",
    "@angular/router": "^21.0.0",
    "@angular/ssr": "21.0.4",
    "@ng-doc/app": "21.0.0",
    "@ng-doc/builder": "21.0.0",
    "@ng-doc/core": "21.0.0",
    "@ng-doc/ui-kit": "21.0.0",
    "@tinkoff/ng-polymorpheus": "4.0.11",
    "bootstrap": "^5.3.8",
    "express": "^5.1.0",
    "flex-controls": "^2.0.1",
    "rxjs": "~7.8.2",
    "tslib": "^2.8.1"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^21.0.0",
    "@angular-devkit/core": "^21.0.0",
    "@angular-devkit/schematics": "^21.0.0",
    "@angular/build": "^21.0.0",
    "@angular/cli": "^21.0.0",
    "@angular/compiler-cli": "^21.0.0",
    "@eslint/js": "^9.37.0",
    "@playwright/test": "^1.56.1",
    "@schematics/angular": "^21.0.0",
    "@semantic-release/exec": "^7.1.0",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/npm": "^13.1.2",
    "@sonar/scan": "^4.3.2",
    "@stackblitz/sdk": "^1.11.0",
    "@types/d3": "^7.4.3",
    "@types/express": "^5.0.1",
    "@types/node": "^24.7.2",
    "@typescript-eslint/eslint-plugin": "^8.46.1",
    "@typescript-eslint/parser": "^8.46.1",
    "@vitest/browser-playwright": "^4.0.10",
    "angular-eslint": "20.4.0",
    "baseline-browser-mapping": "^2.9.11",
    "eslint": "^9.37.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsdoc": "^61.1.4",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "jsdom": "^27.2.0",
    "ng-packagr": "^21.0.0",
    "prettier": "^3.6.2",
    "semantic-release": "^25.0.0",
    "typescript": "~5.9.3",
    "typescript-eslint": "8.46.1",
    "vitest": "^4.0.10"
  },
  "browserslist": [
    "last 2 Chrome versions",
    "last 2 ChromeAndroid versions",
    "last 2 Firefox versions",
    "last 2 Edge versions",
    "last 2 Safari major versions",
    "last 2 iOS major versions"
  ]
}